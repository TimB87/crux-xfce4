name=libxfce4util
version=4.18.1
release=1
source=(https://archive.xfce.org/src/xfce/$name/${version:0:4}/$name-$version.tar.bz2)

build() {

  cd $name-$version

	./configure \
		--prefix=/usr \
		--disable-debug \
		--enable-gtk-doc-html=no

	make
	make DESTDIR=$PKG install

#	rm -r $PKG/usr/share/locale
#	rm -r $PKG/usr/share/gtk-doc
#	rm -r $PKG/usr/share

}
