# Description: Simple Xfce taskmanager
# URL: https://goodies.xfce.org/projects/applications/xfce4-taskmanager
# Maintainer: jolupa, jlpavon at me dot com
# Depends on: gtk3 cairo libwnck-gtk3

name=xfce4-taskmanager
version=1.2.2
release=4
source=(https://archive.xfce.org/src/apps/$name/${version:0:3}/$name-$version.tar.bz2)

build() {

	cd $name-$version

	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib/$name \
		--disable-gtk2 \
		--enable-gksu \
		--enable-wnck3

	make
	make DESTDIR=$PKG install

}
