# Description: Simple Xfce taskmanager
# URL: https://goodies.xfce.org/projects/applications/xfce4-taskmanager
# Maintainer: jolupa, jlpavon at me dot com
# Depends on: gtk3 cairo libwnck3

name=xfce4-taskmanager
version=1.2.2
release=1
source=(https://git.xfce.org/apps/$name/snapshot/$name-$version.tar.gz)

build() {

	cd $name-$version

	./autogen.sh \
		--prefix=/usr \
		--libexecdir=/usr/lib/$name \
		--disable-gtk2 \
		--enable-gksu \
		--enable-wnck3 \
		--with-x

	make
	make DESTDIR=$PKG install

}
