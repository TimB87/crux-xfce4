# Description:	xfwm4 for xfce4 desktop
# URL:		https://xfce.org
# Maintainer:	jolupa <jolupameister(at)gmail(dot)com>
# Depends on:	libxfce4util libxfce4ui xfconf dbus-glib libwnck-gtk3
# Optional:	startup-notification

name=xfwm4
version=4.13.1
release=1
source=(http://archive.xfce.org/src/xfce/$name/${version%.*}/$name-$version.tar.bz2)

build() {
  cd $name-$version
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --datadir=/usr/share \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib \
    --localstatedir=/var \
    --disable-static \
    --disable-gtk-debug \
    --mandir=/usr/share/man \
    --disable-nls \
    --disable-debug
 make

 make DESTDIR=$PKG install

 #rm -r $PKG/usr/share/gtk-doc

}
