# Description:	Gtk engine
# URL:		https://www.xfce.org
# Maintainer:	jolupa <jolupameister(at)gmail[dot](com)
# Depends on:	gtk3

name=gtk-xfce-engine
version=2.10.0
release=1
source=(http://archive.xfce.org/xfce/4.12/src/$name-$version.tar.bz2)

build() {

	cd $name-$version
	
	./configure \
	--prefix=/usr \
	--libexecdir=/usr/lib/$name \
	--disable-static \
	--enable-gtk3 \
	--disable-gtk2
	
	make

	make DESTDIR=$PKG install
}
