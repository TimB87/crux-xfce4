# Description:	Gtk engine
# URL:		https://www.xfce.org
# Maintainer:	jolupa <jolupameister(at)gmail[dot](com)
# Depends on:	gtk3

name=gtk-xfce-engine
version=3.2.0
release=1
source=(https://archive.xfce.org/src/xfce/$name/3.2/$name-$version.tar.bz2)

build() {
	cd $name-$version
	
	./configure \
	--prefix=/usr \
	--sysconfdir=/etc \
	--libexecdir=/usr/lib \
	--localstatedir=/var \
	--disable-static \
	--disable-gtk-docs \
	--disable-gtk-2 \
	--enable-notification
	make

	make DESTDIR=$PKG install
}
