# Description: Driver for Broadcom WL cards
# URL: http://www.lwfinger.com/b43-firmware
# Maintainer: jolupa, jlpavon at me dot com
# Depends on: b43-fwcutter

name=broadcom-driver
_realname=broadcom-wl
version=6.30.163.46
release=1
source=(http://www.lwfinger.com/b43-firmware/$_realname-$version.tar.bz2)

build() {

	install -d $PKG/lib/firmware

	b43-fwcutter -w $PKG/lib/firmware $_realname-$version.wl_apsta.o

}
