#Description:Pulseaudio panel plugin
#URL:https://www.xfce.org
#Maintainer:jolupa, jlpavon at me dot com
#Depends on:xfce4-panel pulseaudio gtk3 exo libxfce4util libxfce4ui xfconf pavucontrol

name=xfce4-pulseaudio-plugin
version=0.4.1
release=1
source=(https://git.xfce.org/panel-plugins/$name/snapshot/$name-$version.tar.gz)

build() {

	cd $name-$version

	./autogen.sh \
	  --prefix=/usr \
	  --libexecdir=/usr/lib/$name \
	  --enable-libnotify \
	  --enable-wnck \
	  --with-x \
	  --with-mixer-command=pavucontrol
	
	make
	make DESTDIR=$PKG install
	
	#rm -r $PKG/usr/share/locale
	
}
