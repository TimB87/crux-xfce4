# Description:	Automatic management of removable drives and media for Thunar
# URL:		https://www.xfce.org
# Maintainer:	 jolupa, jolupameister at gmail dot com
# Depends on:	thunar exo glib gtk3 libgudev libxfce4ui libxfce4util xfconf

name=thunar-volman
version=0.9.2
release=2
source=(https://git.xfce.org/xfce/$name/snapshot/$name-$version.tar.gz)

build() {

  cd $name-$version
	
	./autogen.sh \
	--prefix=/usr \
	--libexecdir=/usr/lib/$name \
	--disable-static \
	--disable-gtk-docs \
	--disable-gtk-2
	make

	make DESTDIR=$PKG install
	
	#rm -r $PKG/usr/share/locale
}
