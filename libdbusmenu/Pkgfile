# Description: A small little library that was created by pulling out some comon code out of indicator-applet
# URL: https://launchpad.net/libdbusmenu
# Maintainer: jolupa, jolupameister at gmail dot com
# Depends on: gtk

name=libdbusmenu
version=16.04.0
release=1
source=(https://launchpad.net/$name/${version%.*}/$version/+download/$name-$version.tar.gz)

build() {

  export HAVE_VALGRIND_TRUE='#'
  export HAVE_VALGRIND_FALSE=''
  
	cd $name-$version
	  ./configure \
	    --prefix=/usr \
	    --libexecdir=/usr/lib/$name \
	    --disable-tests \
	    --disable-masivedebugging \
	    --enable-vala \
	    --enable-introspection=auto \
	    --disable-dumper
	    
    make
    make DESTDIR=$PKG install
    
  rm -r $PKG/usr/share/{doc,gtk-doc}
    
}
