# Description:	Xfce's panel
# URL:		https://www.xfce.org
# Maintainer:	 jolupa, jlpavon at mel dot com
# Depends on:	libxfce4ui exo garcon libwnck-gtk3 startup-notification

name=xfce4-panel
version=4.13.5
release=5
source=(http://archive.xfce.org/xfce/4.14pre1/src/$name-$version.tar.bz2)

build() {
	
	cd $name-$version

	./configure \
	  --prefix=/usr \
	  --libexecdir=/usr/lib/$name \
	  --disable-gtk2 \
	  --enable-introspection=no \
	  --enable-gio-unix \
	  --enable-vala=no \
	  --disable-debug \
	  --disable-gtk-doc \
	  --disable-gtk-doc-html \
	  --disable-gtk-doc-pdf

	make
	make DESTDIR=$PKG install
	
	#rm -r $PKG/usr/share/locale
	rm -r $PKG/usr/share/gtk-doc
	
}
