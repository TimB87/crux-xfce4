# Description: Freedesktop.org compliant menu library
# URL: https://www.xfce.org
# Packager: jolupa, jlpavon at me dot com
# Maintainer: jolupa, jlpavon at me dot com
# Depends on: xfce4-dev-tools glib libxfce4util libxfce4ui gtk-doc

name=garcon
version=0.6.4
release=1
source=(https://git.xfce.org/xfce/$name/snapshot/$name-$version.tar.gz)

build() {
	
	cd $name-$version

	./autogen.sh \
	  --prefix=/usr \
	  --libexecdir=/usr/lib/$name \
	  --enable-libxfce4ui \
	  --disable-gtk2 \
	  --enable-gtk3 \
	  --disable-gtk-doc \
	  --disable-gtk-doc-html \
	  --disable-gtk-doc-pdf
	
	make
	make DESTDIR=$PKG install
	
	#rm -r $PKG/usr/share/locale
	
}
