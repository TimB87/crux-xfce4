# Description:
# URL: https://berrywm.org
# Maintainer: jolupa, jlpavon at me dot com
# Depends on: xorg-libx11 xorg-libxft xorg-libxinerama sxhkd

name=berry
version=0.1.5
release=1
source=(https://github.com/JLErvin/$name/archive/$version.tar.gz berry.desktop)

build() {
  mkdir -p $PKG/usr/{bin,share}
  mkdir -p $PKG/usr/share/man/man1
  mkdir -p $PKG/usr/share/xsessions
  mkdir -p $PKG/etc/xdg/berry

  cd $name-$version
  make
  cp berry $PKG/usr/bin
  cp berryc $PKG/usr/bin
  chmod 755 $PKG/usr/bin/{berry,berryc}
  cp berry.1 $PKG/usr/share/man/man1/berry.1
  cp berryc.1 $PKG/usr/share/man/man1/berryc.1
  chmod 644 $PKG/usr/share/man/man1/{berry.1,berryc.1}
  cp examples/* $PKG/etc/xdg/berry
  cp $SRC/berry.desktop $PKG/usr/share/xsessions
}
