# Description: A healthy, bite-sized window manager written over the XLib Library
# URL: https://github.com/JLErvin/berry
# Packager: jolupa, jlpavon at me dot com
# Maintainer: jolupa, jlpavon at me dot com
# Depends on: xorg-libx11 xorg-libxft xorg-libxinerama freetype sxhkd

name=berry
version=0.1.0
release=2
source=(https://github.com/JLErvin/$name/archive/$version.tar.gz berry.desktop)

build() {

	cd $name-$version

	make

  install -dm 755 $PKG/usr{/bin,/share/xsessions}
  install -m 755 {berry,berryc} $PKG/usr/bin
  install -m 644 $SRC/berry.desktop $PKG/usr/share/xsessions

}
