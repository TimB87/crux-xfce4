# Description: GStreamer-based Media Player for XFCE
# URL: https://www.xfce.org
# Maintainer: mac-a-r0ni, j at lngn dot net
# Depends on: dbus-glib gst-plugins-base gst-plugins-good libnotify libxfce4ui libxfce4util
# Optional: gst-libav gst-plugins-bad gst-plugins-ugly

name=parole
version=4.18.0
release=1
source=(https://archive.xfce.org/src/xfce/$name/${version:0:4}/$name-$version.tar.bz2)

build() {

	cd $name-$version

	./configure \
	  --prefix=/usr \
	  --libexecdir=/usr/lib/$name \
	  --sysconfdir=/etc \
	  --disable-gtk-doc \
	  --disable-nls

	make
	make DESTDIR=$PKG install

    rm -r $PKG/usr/share/gtk-doc
    rm -r $PKG/usr/share/doc

}
