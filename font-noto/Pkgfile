# Description: Beautiful adn free fonts for all languages
# URL: https://www.google.com/get/noto/
# Packager: jolupa, jlpavon at me dot com
# Maintainer: jolupa, jlpavon at me dot com
# Depends on: fontconfig

name=font-noto
_name=Noto-unhinted
version=1.0
release=2
source=(https://noto-website-2.storage.googleapis.com/pkgs/$_name.zip)

build() {

  install -d $PKG/usr/share/fonts/{TTF,OTF}

  for i in *.ttf;
    do install -m644 $i $PKG/usr/share/fonts/TTF
  done

  for i in *.otf;
    do install -m644 $i $PKG/usr/share/fonts/OTF
  done

}

