# Description: Secure PinEntry Dialog
# URL: https://gnupg.org/related_software/pinentry/
# Maintainer: Tim Biermann, tbier at posteo dot de
# Depends on: libassuan libcap util-linux gcr3 gtk
# Optional: libsecret

name=pinentry
version=1.2.1
release=1
source=(https://gnupg.org/ftp/gcrypt/$name/$name-$version.tar.bz2
  pinentry)

build() {
  cd $name-$version

  ./configure \
    --prefix=/usr \
    --disable-pinentry-{qt,qt5} \
    --enable-pinentry-{curses,gtk2}

  make
  make DESTDIR=$PKG install

  rm -rf $PKG/usr/share
  rm $PKG/usr/bin/pinentry
  install -m 755 $SRC/pinentry $PKG/usr/bin/pinentry
}
