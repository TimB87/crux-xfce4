# Description: Panel plugin to display a graphical representation of the CPU load
# URL: https://git.xfce.org/panel-plugins/xfce4-cpugraph-plugin/about/
# Maintainer: jolupa, jlpavon at me dot com
# Depends on: libxfce4ui xfce4-panel gtk3

name=xfce4-cpugraph-plugin
version=1.1.0
release=1
source=(https://git.xfce.org/panel-plugins/$name/snapshot/$name-$version.tar.gz)

build() {

	cd $name-$version

	./autogen.sh \
		--prefix=/usr \
		--libexecdir=/usr/lib/$name \
		--disable-maintainer-mode \
		--disable-debug

	make
	make DESTDIR=$PKG install

}
